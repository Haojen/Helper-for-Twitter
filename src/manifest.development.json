{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "default_locale": "en",
    "version": "0.1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "Twitter-Helper-48.png",
        "96": "Twitter-Helper-96.png",
        "128": "Twitter-Helper-128.png",
        "256": "Twitter-Helper-256.png",
        "512": "Twitter-Helper-512.png"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://twitter.com/*"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": ["block.svg"],
            "matches": ["*://twitter.com/*"]
        }
    ]
}